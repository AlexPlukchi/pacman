void generate_map()
{
    srand(time(NULL));
    for (int index = 0; index < 19; ++index)
        for (int yandex = 0; yandex < 19; ++yandex)
        {
            int t = rand()%10000;
            if ((t % 20 == 0) && (MAP[index][yandex] == 0))
                MAP[index][yandex] = 3;
        }
}
